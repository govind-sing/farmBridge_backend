<aiml version="1.0">
    <!-- Specific pattern for "Tell me about..." -->
    <category>
        <pattern>TELL ME ABOUT *</pattern>
        <template>
            <think><set name="food_query">yes</set></think>
            <think><set name="food_name"><star/></set></think>
            Okay, let me get the information for <star/>.
        </template>
    </category>

    <!-- Greeting -->
    <category>
        <pattern>HELLO</pattern>
        <template>Hello! How can I help you today?</template>
    </category>

    <!-- Exit -->
    <category>
        <pattern>BYE</pattern>
        <template>Goodbye! Have a great day!</template>
    </category>

    <!-- Catch-all pattern for any input -->
    <category>
        <pattern>*</pattern>
        <template>
            <think><set name="food_query">maybe</set></think>
            Let me see if I can find information about that.
        </template>
    </category>
</aiml>